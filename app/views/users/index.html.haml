.header
  .header__body
    .left
      = icon('fas', 'book', class: 'book')
      Todo-Diary
    .right
      .logout
        = link_to "ログアウト", destroy_user_session_path, method: :delete,class:'btn2'
      .new-account
        = link_to new_user_registration_path, class:"new-account" do
          = icon('far', 'user-circle', class: 'book')
          新規登録
      .sign-up
        = link_to new_user_session_path, class:"sign-up" do
          = icon('fas', 'sign-in-alt', class: 'book')
          ログイン
        //= icon('fas', 'book faa-float animated', class: 'book')のような形でアニメーションをつけられる
.tp-content
  .tp-content__body
    .text
      %h2タスク管理と日記で
      %br
      %h2毎日を充実させよう!!
    .new
      %a#js-modal-open{href: ""} 始める
    .modal#js-modal
      .modal__back#js-modal-close
      .modal__content
        = render 'devise/registrations/new'
        %a#js-modal-close{href: ""} 閉じる
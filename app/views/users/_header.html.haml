.header
  .header__body
    .left
      = link_to  icon('fas', 'book' , "Todo-Diary", class: 'book') ,tasks_path, class: "title"
    %ul.right
      - if user_signed_in?
        %li.box
          = link_to "Today", tasks_path
        %li.box
          = link_to "Todo", new_task_path
        %li#list.box
          = link_to "User", "/users/#{current_user.id}"
          %ul#drop
            %li= link_to "My tasks", "/users/#{current_user.id}"
            %li= link_to "Profile", "/users//#{current_user.id}/edit"
        %li.box
          = link_to "Logout", destroy_user_session_path, method: :delete
      - else
        .box.new-account
          = link_to new_user_registration_path, class:"new-account faa-parent animated-hover" do
            = icon('far', 'user-circle faa-flash', class: 'book')
            Sign up
        .box.sign-in
          = link_to new_user_session_path, class:"sign-in faa-parent animated-hover" do
            = icon('fas', 'sign-in-alt faa-flash', class: 'book')
            Login
          //= icon('fas', 'book faa-float animated', class: 'book')のような形でアニメーションをつけられる
